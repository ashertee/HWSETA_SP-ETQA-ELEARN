<?xml version="1.0"?>
<odoo>
<!--	transfer to erp-->
<record id="helpdesk_ticket_transfer_form_view" model="ir.ui.view">
		<field name="name">Helpdesk Ticket Transfer</field>
		<field name="model">helpdesk.ticket.transfer.wizard</field>
		<field name="arch" type="xml">
			<form string="helpdesk ticket transfer Form" edit="1" create="0">
                <field name="allowed_value_ids" invisible="1" />
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1 class="oe_title">
                            <field name="number"/>
                        </h1>
                        <h2 class="o_row">
                            <field name="name" placeholder="Summary"/>
                        </h2>

                    </div>
                    <group name="main">
                        <group>
                            <field name="team_id" options="{'no_create': True, 'no_create_edit':True,'no_open':True,'always_reload': True}" string="Team *" required="1"/>
                            <field name="user_ids" invisible="1" readonly="1" />
                            <field name="user_id" invisible = '0' options="{'no_create': True, 'no_create_edit':True,'no_open':True,'always_reload': True}" required="1" string="Assigned user *" />
<!--                            <field name="user_id_internal" options="{'no_create': True, 'no_create_edit':True,'no_open':True,'always_reload': True}"/>-->

                            <field name="priority" />
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                            <field name="create_date" readonly="1"/>
                            <field name="channel_id" options="{'no_create': True, 'no_create_edit':True,'no_open':True}" invisible="1"/>
                        </group>
                        <group>
                            <field name="stakeholder_type" readonly="stakeholder_type != False" force_save="1"/>
                            <field name="stakeholder_type_id" string ="Stakeholder Type ID" placeholder="eg. HW591xxxxxxxxx or Lxxxxxxxxx or Txxxxxxxxx" readonly="stakeholder_type_id != False" force_save="1"/>
<!--                            <field name="stakeholder_type_id" string ="Stakeholder Type ID" />-->
                            <field name="contact_number" readonly="contact_number != False" force_save="1"/>
                            <field name="email_address" string = "Email Address *" required="1" readonly="email_address != False" force_save="1"/>
                            <field name="province_id" domain="[('country_id', '=', 247)]" required="1" options="{'no_create': True, 'no_create_edit':True,'no_open':True}" readonly="province_id != False" string="Province *" force_save="1"/>
                            <field name="partner_id" readonly="1" options="{'no_create': True, 'no_create_edit':True,'no_open':True}" force_save="1"/>
                            <field name="partner_name" readonly="1" invisible="1" />
                            <field name="partner_email" readonly="1" invisible="1"/>
                            <field name="category_id" options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
                            <field name="sequence" groups="base.group_no_one" invisible="1"/>
                        </group>
                    </group>
                        <notebook>
                            <page string="Description" name="description">
                                <field name="description" widget="html" />
                            </page>
                            <page string="Other Information" name="other_info">
                                <group>
                                    <field name="last_stage_update" readonly="1"/>
                                    <field name="assigned_date" readonly="1"/>
                                    <field name="closed_date" readonly="1"/>
                                </group>
                            </page>
                        </notebook>
                </sheet>
				<footer>
					<button type="object"
							name="action_transfer_to_erp"
							string="Submit" />
					<button special="cancel"
							string="Cancel"
							class="btn-secondary" />
				</footer>
		   </form>
		</field>
	</record>

	<record id="helpdesk_ticket_transfer_wizard_action" model="ir.actions.act_window">
		<field name="name">Helpdesk Ticket Transfer</field>
		<field name="res_model">helpdesk.ticket.transfer.wizard</field>
		<field name="type">ir.actions.act_window</field>
		<field name="context">{}</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>


<!--    Transfert to IT Helpdesk-->

