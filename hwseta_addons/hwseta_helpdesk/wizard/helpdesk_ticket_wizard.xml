                        </group>
                    </group>
                        <notebook>
                            <page string="Description" name="description">
                                <field name="description" widget="html" />
                            </page>
                            <page string="Other Information" name="other_info">
                                <group>
                                    <field name="last_stage_update" readonly="1"/>
                                    <field name="assigned_date" readonly="1"/>
                                    <field name="closed_date" readonly="1"/>
                                </group>
                            </page>
                        </notebook>
                </sheet>
				<footer>
					<button type="object"
							name="action_transfer_to_it"
							string="Submit" />
					<button special="cancel"
							string="Cancel"
							class="btn-secondary" />
				</footer>
		   </form>
		</field>
	</record>

	<record id="it_helpdesk_ticket_transfer_wizard_action" model="ir.actions.act_window">
		<field name="name">IT Helpdesk Ticket Transfer</field>
		<field name="res_model">it.helpdesk.ticket.transfer.wizard</field>
		<field name="type">ir.actions.act_window</field>
		<field name="context">{'default_is_it_helpdesk': True}</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>

</odoo>