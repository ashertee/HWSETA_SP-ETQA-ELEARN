                            <field name="email_address" string = "Email Address *" required="1" readonly="email_address != False" force_save="1"/>
                            <field name="province_id" domain="[('country_id', '=', 247)]" required="1" options="{'no_create': True, 'no_create_edit':True,'no_open':True}" readonly="province_id != False" string="Province *" force_save="1"/>
                            <field name="partner_id" readonly="1" options="{'no_create': True, 'no_create_edit':True,'no_open':True}" force_save="1"/>
