<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_it_helpdesk_ticket_department_form" model="ir.ui.view">
        <field name="name">it.helpdesk.ticket.department.form</field>
        <field name="model">helpdesk.it.department</field>
        <field name="arch" type="xml">
            <form string="Stages">
                <header>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" string="Department Name" required="1" />
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_it_helpdesk_ticket_department_tree" model="ir.ui.view">
        <field name="name">it.helpdesk.ticket.department.tree</field>
        <field name="model">helpdesk.it.department</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" string="department"/>
            </list>
        </field>
    </record>

    <record id="it_helpdesk_ticket_department_action" model="ir.actions.act_window">
        <field name="name">Teams</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.it.department</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="it_helpdesk_ticket_department_menu"
        name="Department"
        action="it_helpdesk_ticket_department_action"
        parent="it_helpdesk_ticket_config_main_menu"
        sequence="35"
    />
</odoo>
