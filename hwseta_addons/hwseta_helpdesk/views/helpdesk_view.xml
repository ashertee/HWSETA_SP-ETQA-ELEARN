<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <!--    External users Views-->
    <record id="ticket_ext_view_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.ext.view.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="groups_id" eval="[(6, 0, [ref('group_helpdesk_external_user')])]"/>
        <field name="arch" type="xml">
            <form string="Helpdesk Ticket" create="0" edit="0" duplicate="false" class="hwseta-hide-chatter-activities hwseta-hide-chatter-follow hwseta-hide-chatter-mail hwseta-hide-chatter-fullcomposer">
                <field name="is_cancelled" invisible='1'/>
                <field name="is_closed" invisible='1'/>
                <field name="is_done" invisible='1'/>
                <field name="is_new" invisible='1'/>
                <field name="allowed_value_ids" invisible='1'/>
                <field name="is_in_transferred_stage" invisible='1'/>
                <header>
                    <button string="Save" special="save" class="btn btn-primary" data-hotkey="s" invisible="id != False"
                            help="Click to save changes"/>
                    <button string="Discard" special="cancel" class="btn btn-secondary" data-hotkey="d"
                            invisible="id != False" help="Click to discard changes"/>
                    <!--                    <button name="return_tree_view" string="Discard" data-hotkey="x"/>-->

                    <button string="Cancel Ticket"
                            name="cancel_ticket"
                            type="object"
                            confirm="Are you sure you want to cancel the ticket?"
                            invisible="user_id != False or is_cancelled ==True or is_done == True or is_new == False or id == False"/>
                    <button string="Close Ticket"
                            name="close_ticket"
                            type="object"
                            class="btn-danger"
                            confirm="Are you sure you want to close the ticket?"
                            invisible="is_closed == True or is_done == True or is_cancelled == True or (is_new == True and user_id == False) "/>
                    <button string="Reopen Ticket"
                            name="reopen_ticket"
                            type="object"
                            class="btn-danger"
                            confirm="Are you sure you want to Reopen the ticket?"
                            invisible="is_done != True"/>

                    <field name="stage_id" widget="statusbar" options="{'clickable': False}"
                           invisible="is_in_transferred_stage == True"/>
                </header>
                <sheet>
                    <!--                    <div class="oe_button_box" name="button_box">-->
                    <!--                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">-->
                    <!--                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>-->
                    <!--                        </button>-->
                    <!--                    </div>-->
                    <div invisible="is_in_transferred_stage != True">
                        <h1><span style="color: #ff0000;"><strong>Transfered to the IT Helpdesk</strong></span></h1>
                    </div>
                    <div class="oe_title">
                        <h1 class="oe_title">
                            <field name="number"/>
                        </h1>
                        <h2 class="o_row">
                            <field name="name" placeholder="Summary"/>
                        </h2>

                    </div>
                    <group name="main">
                        <group>
                            <field name="team_id"
                                   options="{'no_create': True, 'no_create_edit':True,'no_open':True,'always_reload': True}"
                                   readonly="1"/>
                            <field name="user_ids" invisible="1" readonly="1"/>
                            <field name="user_id"
                                   options="{'no_create': True, 'no_create_edit':True,'no_open':True,'always_reload': True}"
                                   readonly="1"/>

                            <field name="priority" widget="priority" invisible="1"/>
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                            <field name="create_date" readonly="1"/>
                            <field name="channel_id" invisible="1"/>
                        </group>
                        <group>

                            <field name="stakeholder_type" required="1" string="Stakeholder Type *"/>
                            <field name="stakeholder_type_id" string="Stakeholder Type ID *" required="1"
                                   placeholder="eg. HW591xxxxxxxxx or Lxxxxxxxxx or Txxxxxxxxx"/>
                            <!--                            <field name="stakeholder_type_id" string ="Stakeholder Type ID" required ="1" attrs="{'invisible': [('stakeholder_type', '!=', 'moderator')]}" placeholder="eg. HW591MRxxxxxxx"/>-->
                            <field name="contact_number"/>
                            <field name="email_address" string="Email Address *" required="1" readonly="1"
                                   force_save="1"/>
                            <field name="province_id" domain="[('country_id', '=', 247)]" required="1"
                                   options="{'no_create': True, 'no_create_edit':True,'no_open':True}"
                                   string="Province *"/>
                            <field name="partner_id" invisible="1"/>
                            <field name="partner_name" invisible="1"/>
                            <field name="partner_email" invisible="1"/>
                            <field name="category_id" invisible="1"/>
                            <field name="tag_ids" widget="many2many_tags"
                                   options="{'color_field': 'color', 'no_create_edit': True}" invisible="1"/>
                            <field name="sequence" groups="base.group_no_one" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" widget="html" required="1"/>
                        </page>
                        <page string="Other Information" name="other_info">
                            <group>
                                <field name="last_stage_update" readonly="1"/>
                                <field name="assigned_date" readonly="1"/>
                                <field name="closed_date" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
          <chatter/>
            </form>
        </field>
    </record>


    <record id="ticket_ext_view_tree" model="ir.ui.view">
        <field name="name">helpdesk.ticket.ext.view.tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="groups_id" eval="[(6, 0, [ref('group_helpdesk_external_user')])]"/>
        <field name="arch" type="xml">
            <list import="false" create='true' edit="0" duplicate="0" delete="0">
                <field name="number"/>
                <field name="name"/>
                <!--                <field name="partner_name" invisible= "1"/>-->
                <field name="user_id"/>
                <field name="stage_id"/>
                <field name="priority" widget="priority" options="{'clickable': False}"/>
                <field name="create_date" readonly="1"/>
                <field name="last_stage_update"/>
            </list>
        </field>
    </record>

    <record id="helpdesk_ext_ticket_action" model="ir.actions.act_window">
        <field name="name">Tickets</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket</field>
        <field name="view_mode">list,form</field>
        <!--            <field name="view_type">form</field>-->
    </record>

    <record id="action_ticket_ext_tree_view" model="ir.actions.act_window.view">
        <field eval="1" name="sequence"/>
        <field name="view_mode">list</field>
        <field name="sequence">1</field>
        <field name="view_id" ref="ticket_ext_view_tree"/>
        <field name="act_window_id" ref="helpdesk_ext_ticket_action"/>
    </record>

    <record id="action_ticket_ext_view_form" model="ir.actions.act_window.view">
        <field eval="1" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="sequence">2</field>
        <field name="view_id" ref="ticket_ext_view_form"/>
        <field name="act_window_id" ref="helpdesk_ext_ticket_action"/>
    </record>


    <!--    Internal users view-->

    <record id="ticket_int_view_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.intern.view.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="groups_id"
               eval="[(6, 0, [ref('helpdesk_mgmt.group_helpdesk_user'),ref('helpdesk_mgmt.group_helpdesk_manager')])]"/>
        <field name="arch" type="xml">
            <form string="Helpdesk Ticket" create="true" edit="true" duplicate="false" delete="0" class="hwseta-hide-chatter-mail">
                <field name="is_cancelled" invisible='1'/>
                <field name="is_closed" invisible='1'/>
                <field name="is_clickable" invisible='1'/>
                <field name="is_done" invisible='1'/>
                <field name="allowed_value_ids" invisible='1'/>
                <field name="is_transfered_to_it" invisible='1'/>
                <field name="is_transfered_to_erp" invisible='1'/>
                <field name="is_in_transferred_stage" invisible='1'/>
                <field name="is_done_erp" invisible='1'/>

                <header>
                    <button string="Assign to me"
                            name="assign_to_me"
                            type="object"
                            invisible="user_id != False or is_transfered_to_erp == True or is_transfered_to_it == True or is_in_transferred_stage == True"/>
                    <button string="Reopen Ticket"
                            name="reopen_ticket"
                            type="object"
                            class="btn-danger"
                            confirm="Are you sure you want to Reopen the ticket?"
                            invisible="is_done != True"/>
                    <button name="%(it_helpdesk_ticket_transfer_wizard_action)d"
                            groups="hwseta_helpdesk.group_helpdesk_transfer_ticket_to_it"
                            confirm="Please confirm if you want to transfer this ticket."
                            string="Transfer To IT Helpdesk" type="action" class="btn-primary"
                            invisible="is_transfered_to_it == True or is_transfered_to_erp == True or is_in_transferred_stage == True or is_done == True or id==False or is_done_erp == True"/>
                    <field name="stage_id" domain="[('name', '!=', 'Transferred')]" widget="statusbar"
                           options="{'clickable': True}"
                           invisible="is_transfered_to_it == True or is_in_transferred_stage == True or is_cancelled==True"
                           readonly="is_done_erp == True"/>
                    <!--                    <field name="stage_id" widget="statusbar" options="{'clickable': False}" attrs="{'invisible': [('is_clickable', '=', False)]}" />-->
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!--                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">-->
                        <!--                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>-->
                        <!--                        </button>-->
                    </div>
                    <div invisible="is_in_transferred_stage != True">
                        <h1><span style="color: #ff0000;"><strong>Transfered to the IT Helpdesk</strong></span></h1>
                    </div>
                    <div class="oe_title">
                        <h1 class="oe_title">
                            <field name="number"/>
                        </h1>
                        <h2 class="o_row">
                            <field name="name" placeholder="Summary"
                                   readonly="is_transfered_to_it == True or is_in_transferred_stage == True"/>
                        </h2>

                    </div>
                    <group name="main">
                        <group>
                            <field name="team_id"
                                   options="{'no_create': True, 'no_create_edit':True,'no_open':True,'always_reload': True}"
                                   readonly="is_transfered_to_it == True or is_in_transferred_stage == True"/>

                            <field name="user_ids" invisible="1" readonly="1"/>

                            <field name="user_id" invisible='0'
                                   options="{'no_create': True, 'no_create_edit':True,'no_open':True,'always_reload': True}"
                                   readonly="is_transfered_to_it == True or is_in_transferred_stage == True"
                                   required="team_id != False"/>
                            <!--                            <field name="user_id_internal" options="{'no_create': True, 'no_create_edit':True,'no_open':True,'always_reload': True}"/>-->

                            <field name="priority"
                                   readonly="is_transfered_to_it == True or is_in_transferred_stage == True"/>
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"
                                   readonly="is_transfered_to_it == True or is_in_transferred_stage == True"/>
                            <field name="create_date" readonly="1"/>
                            <field name="channel_id" options="{'no_create': True, 'no_create_edit':True,'no_open':True}"
                                   invisible="1"/>
                            <field name="it_helpdesk_id" string="Transferred record" invisible="it_helpdesk_id == False"
                                   readonly="1"/>
                        </group>
                        <group>
                            <field name="stakeholder_type"
                                   readonly="stakeholder_type != False or is_transfered_to_it == True or is_in_transferred_stage == True"
                                   force_save="1"/>
                            <field name="stakeholder_type_id" string="Stakeholder Type ID"
                                   placeholder="eg. HW591xxxxxxxxx or Lxxxxxxxxx or Txxxxxxxxx"
                                   readonly="stakeholder_type_id != False or is_transfered_to_it == True or is_in_transferred_stage == True"
                                   force_save="1"/>
                            <!--                            <field name="stakeholder_type_id" string ="Stakeholder Type ID" />-->
                            <field name="contact_number"
                                   readonly="contact_number != False or is_transfered_to_it == True or is_in_transferred_stage == True"
                                   force_save="1"/>
                            <field name="email_address" string="Email Address *" required="1"
                                   readonly="email_address != False or is_transfered_to_it == True or is_in_transferred_stage == True"/>
                            <field name="province_id" domain="[('country_id', '=', 247)]" required="1"
                                   options="{'no_create': True, 'no_create_edit':True,'no_open':True}"
                                   readonly="province_id != False or is_transfered_to_it == True or is_in_transferred_stage == True"
                                   force_save="1"/>
                            <field name="partner_id" readonly="1"
                                   options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
                            <field name="partner_name" readonly="1" invisible="1" force_save="1"/>
                            <field name="partner_email" readonly="1" invisible="1" force_save="1"/>
                            <field name="category_id"
                                   options="{'no_create': True, 'no_create_edit':True,'no_open':True}"
                                   readonly="is_transfered_to_it == True or is_in_transferred_stage == True"/>
                            <field name="tag_ids" widget="many2many_tags"
                                   options="{'color_field': 'color', 'no_create_edit': True}"
                                   readonly="is_transfered_to_it == True or is_in_transferred_stage == True"
                                   force_save="1"/>
                            <field name="sequence" groups="base.group_no_one" invisible="1"
                                   readonly="is_transfered_to_it == True or is_in_transferred_stage == True"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" widget="html"/>
                        </page>
                        <page string="Other Information" name="other_info">
                            <group>
                                <field name="last_stage_update" readonly="1"/>
                                <field name="assigned_date" readonly="1"/>
                                <field name="closed_date" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
<!--                <div class="oe_chatter">-->
<!--                    <field name="message_follower_ids" widget="mail_followers"/>-->
<!--                    <field name="activity_ids" widget="mail_activity"/>-->
<!--                    <field name="message_ids" widget="mail_thread"/>-->
<!--                </div>-->
            </form>
        </field>
    </record>
    <record id="ticket_int_view_tree" model="ir.ui.view">
        <field name="name">helpdesk.ticket.intern.view.tree</field>
        <field name="model">helpdesk.ticket</field>
