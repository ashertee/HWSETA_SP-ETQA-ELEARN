<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="confirm_application_wizard_form_view" model="ir.ui.view">
		<field name="name">confirm.application.wizard.form.view</field>
		<field name="model">confirm.application.wizard</field>
		<field name="arch" type="xml">
			<form>
				<field name="ref" invisible="1" force_save="1"/>
				<p invisible="ref == False">
					Application successfully submitted with reference number : <field name="ref" readonly="1" style="color:black"/>
				</p>
<!--				<group>-->
					<field name="message" widget="html" readonly="1" invisible="ref != False"/>
<!--				</group>-->
				<footer>
					<button type="object" name="action_confirm" string="Submit" invisible="ref != False"/>

					<button special="cancel" string="Cancel" class="btn-secondary" invisible="ref != False"/>
					<button special="cancel" string="Close" class="btn-secondary" invisible="ref == False"/>
				</footer>
			</form>
		</field>
	</record>

