<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="seta_update_message_form_view" model="ir.ui.view">
		<field name="name">seta.update.message.form.view</field>
		<field name="model">seta.update.message</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<field name="message" string="Comment *" required="1"/>
				</group>
				<footer>
					<button type="object" name="action_submit" string="Continue" />

					<button special="cancel" string="Cancel" class="btn-secondary" />
				</footer>
			</form>
		</field>
	</record>
	<record id="seta_update_message_action" model="ir.actions.act_window">
		<field name="name">Update Message generic Wizard</field>
		<field name="res_model">seta.update.message</field>
		<field name="type">ir.actions.act_window</field>
		<field name="context">{}</field>
		<field name="view_id" ref="seta_update_message_form_view"/>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>
</odoo>