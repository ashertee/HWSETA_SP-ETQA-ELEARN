	<record id="res_municipality_list_view" model="ir.ui.view">
		<field name="name">res.municipality.list.view</field>
		<field name="model">res.municipality</field>
		<field name="arch" type="xml">
			<list  delete="false" duplicate="false">

				<field name="name"/>
				<field name="setmis_lookup" string ="SETMIS Lookup"/>
				<field name="nlrd_lookup" string="NLRD Lookup"/>
			</list>
		</field>
	</record>

	<record id="res_municipality_form_view" model="ir.ui.view">
		<field name="name">res.municipality.form.view</field>
		<field name="model">res.municipality</field>
		<field name="arch" type="xml">
			<form delete="false" duplicate="false">		    
                <sheet>
                    <group>
						<group string="Lookup Details">
                            <field name="name"/>
                            <field name="setmis_lookup" string ="SETMIS Lookup"/>
							<field name="nlrd_lookup" string="NLRD Lookup"/>
						</group>
						<group>
							<field name="city_id"/>
							<field name="district_id"/>
							<field name="province_id"/>
							<field name="country_id"/>
							<!--<field name="urban_rural"/>-->

						</group>
                    </group>
                </sheet>
			</form>
		</field>
	</record>

	<record id="res_municipality_action" model="ir.actions.act_window">
		<field name="name">Municipality</field>
		<field name="res_model">res.municipality</field>
		<field name="type">ir.actions.act_window</field>
		<field name="context">{}</field>
		<field name="view_mode">list,form</field>
	</record>
	<menuitem id="master_sub_menu_res_municipality" parent="master_menu_seta_lookup" sequence= "1" name= "Municipality" action="res_municipality_action"/>

</odoo>