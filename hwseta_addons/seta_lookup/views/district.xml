	<record id="res_district_list_view" model="ir.ui.view">
		<field name="name">res.district.list.view</field>
		<field name="model">res.district</field>
		<field name="arch" type="xml">
			<list  duplicate="false">

 				<field name="name"/>
				<field name="setmis_lookup" string="SETMIS Lookup"/>
				<field name="nlrd_lookup" string ="NLRD Lookup"/>

			</list>
		</field>
	</record>

	<record id="res_district_form_view" model="ir.ui.view">
		<field name="name">res.district.form.view</field>
		<field name="model">res.district</field>
		<field name="arch" type="xml">
			<form  duplicate="false">
	
	
			    
                <sheet>
                    <group>
						<group string="Lookup Details">
                               <field name="name"/>
                               <field name="setmis_lookup" string="SETMIS Lookup"/>
                               <field name="nlrd_lookup" string ="NLRD Lookup"/>
						</group>
						<group>
							<field name="code"/>
							<field name="province_id"/>
							<field name="country_id"/>
							<field name="urban_rural"/>
						</group>
                    </group>
                </sheet>
			</form>
		</field>
	</record>

	<record id="res_district_action" model="ir.actions.act_window">
		<field name="name">District</field>
		<field name="res_model">res.district</field>
		<field name="type">ir.actions.act_window</field>
		<field name="context">{}</field>
		<field name="view_mode">list,form</field>
	</record>
	<menuitem id="master_sub_menu_res_district" parent="master_menu_seta_lookup" sequence= "1" name= "District" action="res_district_action"/>

</odoo>