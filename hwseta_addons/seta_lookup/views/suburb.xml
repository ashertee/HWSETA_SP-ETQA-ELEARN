	<record id="res_suburb_list_view" model="ir.ui.view">
		<field name="name">res.suburb.list.view</field>
		<field name="model">res.suburb</field>
		<field name="arch" type="xml">
			<list  duplicate="false">
			
				<field name="name"/>
				<field name="setmis_lookup" string ="SETMIS Lookup"/>
				<field name="nlrd_lookup" string="NLRD Lookup"/>

			</list>
		</field>
	</record>

	<record id="res_suburb_form_view" model="ir.ui.view">
		<field name="name">res.suburb.form.view</field>
		<field name="model">res.suburb</field>
		<field name="arch" type="xml">
			<form  duplicate="false">
	
                <sheet>
                    <group>
						<group string="Lookup Details">
                            <field name="name"/>
                            <field name="setmis_lookup" string ="SETMIS Lookup"/>
						  	<field name="nlrd_lookup" string="NLRD Lookup"/>
						</group>
						<group>
							<field name="postal_code"/>
							<field name="municipality_id"/>
							<field name="city_id"/>
							<field name="district_id"/>
							<field name="province_id"/>
							<field name="country_id"/>
							<field name="urban_rural"/>
							<field name="statssa_area_code"/>
						</group>
                    </group>
                </sheet>
			</form>
		</field>
	</record>

	<record id="res_suburb_action" model="ir.actions.act_window">
		<field name="name">Suburb</field>
		<field name="res_model">res.suburb</field>
		<field name="type">ir.actions.act_window</field>
		<field name="context">{}</field>
		<field name="view_mode">list,form</field>
	</record>
	<menuitem id="master_sub_menu_res_suburb" parent="master_menu_seta_lookup" sequence= "1" name= "Suburb" action="res_suburb_action"/>

</odoo>