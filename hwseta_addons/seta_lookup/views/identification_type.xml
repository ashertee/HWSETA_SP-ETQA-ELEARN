	<record id="identification_type_list_view" model="ir.ui.view">
		<field name="name">identification.type.list.view</field>
		<field name="model">identification.type</field>
		<field name="arch" type="xml">
			<list  duplicate="false">
			
				<field name="name"/>
                <field name="setmis_lookup" string ="SETMIS Lookup"/>
				<field name="nlrd_lookup" string="NLRD Lookup"/>

			</list>
		</field>
	</record>

	<record id="identification_type_form_view" model="ir.ui.view">
		<field name="name">identification.type.form.view</field>
		<field name="model">identification.type</field>
		<field name="arch" type="xml">
			<form  duplicate="false">

                <sheet>
                    <group>
                       <group string="Lookup Details">
                            <field name="name"/>
                            <field name="setmis_lookup" string ="SETMIS Lookup"/>
							<field name="nlrd_lookup" string="NLRD Lookup"/>
                      </group>

                    </group>
                </sheet>
			</form>
		</field>
	</record>

	<record id="identification_type_action" model="ir.actions.act_window">
		<field name="name">Identification Type</field>
		<field name="res_model">identification.type</field>
		<field name="type">ir.actions.act_window</field>
		<field name="context">{}</field>
		<field name="view_mode">list,form</field>
	</record>
	<menuitem id="master_sub_menu_identification_type" parent="master_menu_seta_lookup" sequence= "1" name= "Identification Type" action="identification_type_action"/>

</odoo>