	<record id="financial_year_list_view" model="ir.ui.view">
		<field name="name">financial.year.code.list.view</field>
		<field name="model">financial.year.code</field>
		<field name="arch" type="xml">
			<list  duplicate="false">

                <field name="name"  readonly="1"/>
                <field name="setmis_lookup" string="SETMIS Lookup" readonly="1"/>
                

			</list>
		</field>
	</record>

	<record id="financial_year_form_view" model="ir.ui.view">
		<field name="name">financial.year.code.form.view</field>
		<field name="model">financial.year.code</field>
		<field name="arch" type="xml">
			<form  duplicate="false">
		
			    
                <sheet>
                    <group>
						<group string="Lookup Details">
                               <field name="name"  readonly="1" options="{'no_create': True, 'no_create_edit':True,'no_open':True}"  />
                               <field name="setmis_lookup"  string="SETMIS Lookup" readonly="1" options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
                              
						</group>

                    </group>
                </sheet>
			</form>
		</field>
	</record>

	<record id="financial_year_action" model="ir.actions.act_window">
		<field name="name">Financial Year Code</field>
		<field name="res_model">financial.year.code</field>
		<field name="type">ir.actions.act_window</field>
		<field name="context">{}</field>
		<field name="view_mode">list,form</field>
	</record>
	<menuitem id="menu_item_financial_year" parent="master_menu_seta_lookup" sequence= "1" name= "Financial Year" action="financial_year_action"/>

</odoo>