	<record id="learnership_pre_nqf_list_view" model="ir.ui.view">
		<field name="name">learnership.status.list.view</field>
		<field name="model">learnership.status</field>
		<field name="arch" type="xml">
			<list  duplicate="false">
			
				<field name="name"/>
				<field name="setmis_lookup" string ="SETMIS Lookup"/>
				<field name="nlrd_lookup" string="NLRD Lookup"/>

			</list>
		</field>
	</record>

	<record id="learnership_pre_nqf_form_view" model="ir.ui.view">
		<field name="name">learnership.status.form.view</field>
		<field name="model">learnership.status</field>
		<field name="arch" type="xml">
			<form duplicate="false">
		
                <sheet>
                    <group>
                       <group string="Lookup Details">
                            <field name="name"/>
                            <field name="setmis_lookup" string ="SETMIS Lookup"/>
							<field name="nlrd_lookup" string="NLRD Lookup"/>
                      </group>

                    </group>
                </sheet>
			</form>
		</field>
	</record>

	<record id="learnership_status_action" model="ir.actions.act_window">
		<field name="name">Learnership Status</field>
		<field name="res_model">learnership.status</field>
		<field name="type">ir.actions.act_window</field>
		<field name="context">{}</field>
		<field name="view_mode">list,form</field>
	</record>
	<menuitem id="master_sub_menu_learnership_status" parent="master_menu_seta_lookup" sequence= "1" name= "Learnership Status" action="learnership_status_action"/>

</odoo>