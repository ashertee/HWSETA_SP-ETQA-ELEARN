	<record id="abet_band_list_view" model="ir.ui.view" >
		<field name="name">abet.band.list.view</field>
		<field name="model">abet.band</field>
		<field name="arch" type="xml">
			<list  duplicate="false">
			
				<field name="name"/>
				<field name="setmis_lookup" string="SETMIS Lookup"/>
				<field name="nlrd_lookup" string="NLRD Lookup"/>
				

			</list>
		</field>
	</record>

	<record id="abet_band_form_view" model="ir.ui.view" >
		<field name="name">abet.band.form.view</field>
		<field name="model">abet.band</field>
		<field name="arch" type="xml">
		<!--TODO: Remove edit for test reasons  edit="true" -->
			<form  duplicate="false">
				
                <sheet>
                    <group>
                       <group string="Lookup Details">
                            <field name="name"/>
							<field name="setmis_lookup" string="SETMIS Lookup"/>
							<field name="nlrd_lookup" string="NLRD Lookup"/>
                      </group>

                    </group>
                </sheet>
			</form>
		</field>
	</record>

	<record id="abet_band_action" model="ir.actions.act_window">
		<field name="name">ABET Band</field>
		<field name="res_model">abet.band</field>
		<field name="type">ir.actions.act_window</field>
		<field name="context">{}</field>
		<field name="view_mode">list,form</field>
	</record>
	<menuitem id="master_sub_menu_abet_band" parent="master_menu_seta_lookup" sequence= "1" name= "ABET Band" action="abet_band_action" />

