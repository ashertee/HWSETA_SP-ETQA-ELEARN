<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="person_re_enable_wizard_form_view" model="ir.ui.view">
		<field name="name">person.re.enable.wizard.form.view</field>
		<field name="model">person.re.enable.wizard</field>
		<field name="arch" type="xml">
			<form>
				<field name="display" widget="html" readonly="1" invisible="acknowledge_requirements == True"/>
				<p invisible="acknowledge_requirements == True"><strong><span style="font-size: 14px; font-family: Tahoma, Geneva, sans-serif; color: rgb(0, 128, 0);">If yes please tick the box </span></strong>
					<field name="acknowledge_requirements"/></p>
<!--              	<field name="acknowledge_requirements"/>-->
				<group invisible="acknowledge_requirements == False">
					<group>
						<field name="person_id" string="Person *" readonly="person_id != False" options="{'no_create': True, 'no_create_edit':True,'no_open':True}" force_save="1" required="1"/>
					</group>
					<group>
						<field name="reason" string="Reason *" required="1"/>
					</group>
				</group>
				<p invisible="acknowledge_requirements == False or person_links == False"><strong><span style="font-size: 14px; font-family: Tahoma, Geneva, sans-serif; color: rgb(255, 128, 0);">This person's profile is linked to other profiles and must be re-enabled if needed.</span></strong>
					<field name="person_links" readonly="1" force_save="1"/></p>

				<footer>

					<button type="object" name="action_submit" string="Continue" confirm="Are you sure you want to re-enable your person profile?" invisible="acknowledge_requirements == False"/>

					<button special="cancel" string="Cancel" class="btn-secondary" />
				</footer>
			</form>
		</field>
	</record>
	<record id="person_re_enable_wizard_action" model="ir.actions.act_window">
		<field name="name">Person Reactivate</field>
		<field name="res_model">person.re.enable.wizard</field>
		<field name="type">ir.actions.act_window</field>
		<field name="context">{}</field>
		<field name="view_id" ref="person_re_enable_wizard_form_view"/>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>

	<menuitem id="menu_person_re_enable_wizard"
	          sequence= "2"
	          name="Person Reactivate"
	          action="person_re_enable_wizard_action"
	          parent="seta_base.stakeholder_root_registration_person"
	          groups="seta_person.group_person_re_enable"
	/>


</odoo>