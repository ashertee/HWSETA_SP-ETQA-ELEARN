<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="person_disable_wizard_form_view" model="ir.ui.view">
		<field name="name">person.disable.wizard.form.view</field>
		<field name="model">person.disable.wizard</field>
		<field name="arch" type="xml">
			<form>
				<field name="person_readonly_compute" invisible="1"/>
				<field name="display" widget="html" readonly="1" invisible="acknowledge_requirements == True"/>
				<p invisible="acknowledge_requirements == True"><strong><span style="font-size: 14px; font-family: Tahoma, Geneva, sans-serif; color: rgb(0, 128, 0);">If yes please tick the box </span></strong>
					<field name="acknowledge_requirements"/></p>
<!--              	<field name="acknowledge_requirements"/>-->
				<group invisible="acknowledge_requirements == False">
					<group>
						<field name="person_id" string="Person *" readonly="person_id != False" options="{'no_create': True, 'no_create_edit':True,'no_open':True}" force_save="1" required="1"/>
					</group>
					<group>
						<field name="reason" string="Reason *" required="1"/>
					</group>
				</group>
				<p invisible="acknowledge_requirements == False or person_links == False"><strong><span style="font-size: 14px; font-family: Tahoma, Geneva, sans-serif; color: rgb(255, 128, 0);">You are linked to the following profiles. Therefore, approval will be required after submission.</span></strong>
					<field name="person_links" readonly="1" force_save="1"/></p>

				<footer>

					<button type="object" name="action_submit" string="Continue" confirm="Are you sure you want to disable your person profile?" invisible="acknowledge_requirements == False"/>

					<button special="cancel" string="Cancel" class="btn-secondary" />
				</footer>
			</form>
		</field>
	</record>
	<record id="person_disable_wizard_action" model="ir.actions.act_window">
		<field name="name">Person Deactivate</field>
		<field name="res_model">person.disable.wizard</field>
		<field name="type">ir.actions.act_window</field>
		<field name="context">{}</field>
		<field name="view_id" ref="person_disable_wizard_form_view"/>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>

