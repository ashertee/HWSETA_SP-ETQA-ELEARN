<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="seta_person_tree_view" model="ir.ui.view">
		<field name="name">seta.person.tree.view</field>
		<field name="model">seta.person</field>
		<field name="arch" type="xml">
			<list create="false" edit="false" delete="false">
				<field name="person_first_name" string="First Name"/>
				<field name="person_last_name" string="Last Name"/>
<!--				<field name="national_id" string="ID Number"/>-->
				<field name="national_nd_alternate_id" string="Identification Number"/>
<!--				<field name="person_alternate_id" string="Alternate ID Number"/>-->
				<field name="person_email_address" string="Email Address"/>
				<field name="person_phone_number" string="Phone Number"/>
			</list>
		</field>
	</record>
	<record id="seta_person_form_view" model="ir.ui.view">
		<field name="name">seta.person.form.base</field>
		<field name="model">seta.person</field>
		<field name="arch" type="xml">
			<form string="Person Masters" create="false" edit="false" delete="false">
				<header>
					<button type="object" name="open_person_wiz" string="Update Person Details" groups="seta_person.group_person_master_ext" />
					<button name="%(person_disable_wizard_action)d"  groups="seta_person.group_person_disable" string="Deactivate Person Profile" type="action" class="btn-outline-danger" />
				</header>
				<sheet>
					<field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image_medium', 'size': [90, 90]}" />
					<div class="oe_title">
						<label for="popi_act_status_id_m2o" string="POPI Status" class="oe_edit_only" style="background:light-grey;color:black;" />
						<field name="popi_act_status_id_m2o" options="{'no_create': True, 'no_create_edit':True,'no_open':True} " string="POPI Status" class="oe_edit_only" />

						<div class="o_row">
						</div>
						<div class="o_row">
							<!-- <field name="person_trading_name" placeholder="Trading Name" /> -->
						</div>
					</div>
					<group name="group_person_status">
						<group name="group_left">
							<field name="person_title" string="Title" />
							<field name="person_first_name" string="First Name" />
							<field name="person_middle_name" string="Middle Name " />
							<field name="person_last_name" string="Last Name" />
						</group>
						<group name="group_right">
							<field name="citizen_resident_status_code_m2o" options="{'no_create': True, 'no_create_edit':True,'no_open':True} " string="Citizen Resident Status" />
							<field name="national_id" string="ID Number"  invisible="national_id == False" />
							<field name="alternate_id_type_id_m2o" options="{'no_create': True, 'no_create_edit':True,'no_open':True} " string="Alternate ID Type" force_save="1" invisible="alternate_id_type_id_m2o == False" />
							<field name="person_alternate_id" string="Alternate ID" invisible="person_alternate_id == False"/>
							<field name="nationality_code_m2o" options="{'no_create': True, 'no_create_edit':True,'no_open':True} " string="Nationality" />
<!--							<field name="id_document_upload_name" invisible="1"/>-->
                            <field name="id_document_upload" string="ID Document *" />
						</group>
					</group>
					<notebook name="notebook_main">
						<page name="page_contact" string="Contacts &amp; Personal Details">
							<group name="group_1">
								<group name="group_left" string="Personal Details">
									<field name="gender_code_m2o" options="{'no_create': True, 'no_create_edit':True,'no_open':True} " string="Gender" />
									<field name="home_language_code_m2o" options="{'no_create': True, 'no_create_edit':True,'no_open':True}" string="Home Language" />
									<field name="person_birth_date" string="Date of Birth" />
									<field name="age" string="Age" />
									<field name="equity_code_m2o" string="Race" options="{'no_create': True, 'no_create_edit':True,'no_open':True} "/>
									<!--                          <field name="person_age" string="Age" on_change="1" />-->
									<field name="person_youth" string="Youth" on_change="1" />
								</group>
								<group name="group_left" string="Contact Details">
									<field name="person_phone_number" string="Phone No"/>
									<field name="person_cell_phone_number" string="Mobile No *"/>
									<field name="person_fax_number" string="Fax No" />
									<field name="person_email_address" string="Email" placeholder="e.g. abcd@gmail.com" />
								</group>
							</group>
						</page>
						<page string="Addresses" name="page_addresse">
							 <group name="group_1">

                            <group name="group_left" string="Physical Address">
<!--                                <label for="person_home_address_1" string="Address" />-->
<!--                                <div class="o_address_format">-->
                                    <field name="person_home_address_1" placeholder="Physical Address 1" string="Physical Address 1 *" required="1"/>
                                    <field name="person_home_address_2" placeholder="Physical Address 2 *" string="Physical Address 2 *" required="1"/>
                                    <field name="person_home_address_3" placeholder="Physical Address 3" string="Physical Address 3"/>
								<field name="suburb" string="Suburb *" options="{'no_create': True, 'no_create_edit':True,'no_open':True}" placeholder="Suburb" required="1" force_save="1"/>
                                    <field name="city" options="{'no_create': True, 'no_create_edit':True,'no_open':True}"  placeholder="City" string="City *" required="1" force_save="1"/>
                                    <field name="province_code_m2o" placeholder="Province" string="Province *" required="1" options="{'no_create': True, 'no_create_edit':True,'no_open':True}" domain="[('country_id', '=', 247)]" force_save="1"/>
<field name="person_address_code" placeholder="Postal Code" string="Postal Code *" on_change="1" modifiers="{}" required="1" force_save="1"/>
								<field name="country" options="{'no_create': True, 'no_create_edit':True,'no_open':True}" class="o_address_street" placeholder="Country *" required="1" force_save="1"/>

                            </group>
                            <group name="group_right" string="Postal Address">
                                <label for="same_as_home" />
                                <field name="same_as_home" string="Same as Physical" nolabel="1" force_save="1"/>
<!--                                <label for="person_postal_address_1" string="Postal Address" invisible="same_as_home == True" />-->
<!--                                <div>-->
                                    <field name="person_postal_address_1" placeholder="Postal Address 1" string="Postal Address 1 *" force_save="1"/>
                                    <field name="person_postal_address_2" placeholder="Postal Address 2" string="Postal Address 2 *" force_save="1"/>
                                    <field name="person_postal_address_3" placeholder="Postal Address 3" string="Postal Address 3" force_save="1"/>
                                    <field name="postal_suburb" string="Suburb *" options="{'no_create': True, 'no_create_edit':True,'no_open':True}" placeholder="Suburb" required="1" force_save="1"/>
                                    <field name="postal_city" options="{'no_create': True, 'no_create_edit':True,'no_open':True}"  placeholder="City" string="City *" required="1" force_save="1"/>
                                    <field name="postal_province_code_m2o" placeholder="Province" string="Province *" required="1" options="{'no_create': True, 'no_create_edit':True,'no_open':True}" domain="[('country_id', '=', 247)]" force_save="1"/>
                                    <field name="person_postal_address_code" placeholder="Postal Code" style="width: 20%%" string="Postal Code *"/>
								<field name="postal_country" options="{'no_create': True, 'no_create_edit':True,'no_open':True}" class="o_address_street" string="Country" placeholder="Country *" required="1" force_save="1"/>
<!--                                    <field name="person_address_code" placeholder="Physical Address Postal Code" string="Physical Address Postal Code *" on_change="1" modifiers="{}" required="1" force_save="1" readonly="suburb != False or same_as_home == True"/>-->

<!--                                    </div>-->
<!--                                </div>-->
                            </group>
                        </group>

						</page>
<!--						<page string="Equity &amp; Educational " name="page_equity">-->
<!--							<group name="group_1">-->
<!--								<group name="group_left" string="Educational Info">-->
<!--									<field name='last_school_emis_number' string="Last School Emis No" />-->
<!--									<field name='last_school_year' string="Last School Year" />-->
<!--								</group>-->
<!--								<group name="group_right" string="Equity">-->
<!--									<field name='equity_code_m2o' options="{'no_create': True, 'no_create_edit':True,'no_open':True} " string="Equity" />-->
<!--								</group>-->
<!--							</group>-->
<!--						</page>-->
						<page string="Personal Info Update" name="page_personal_info">
							<group name="group_1">
								<group name="group_left" string="Previous Details">
									<field name='person_previous_last_name' string="Previous Last Name " />
									<field name='previous_national_id' string="Previous SA Identification Number" />
									<field name='person_previous_alternate_id' string="Previous Alternate ID" />
									<field name='person_previous_alternate_id_type_id' string="Previous Alternate ID Type" options="{'no_create': True, 'no_create_edit':True,'no_open':True}" />
								</group>
								<group name="group_right"></group>
							</group>
						</page>
<!--						<page string="Provider &amp; Employer Data" name="page_provider_employer">-->
<!--							<group name="group_1">-->
<!--								<group name="group_left">-->
<!--									&lt;!&ndash;                    <field name='provider_code_m2o' options="{'no_create': True, 'no_create_edit':True,'no_open':True} " string="Provider Code" />&ndash;&gt;-->
<!--									&lt;!&ndash;                    <field name='employer_m2o' options="{'no_create': True, 'no_create_edit':True,'no_open':True} " string="Employer Code" />&ndash;&gt;-->
<!--									<field name='provider_etqe_m2o' options="{'no_create': True, 'no_create_edit':True,'no_open':True} " string="Provider Etqe" />-->
<!--								</group>-->
<!--								<group name="group_right" string="Previous Details">-->

<!--									<field name='person_previous_provider_code' string="Previous Provider Code " />-->
<!--									<field name='person_previous_provider_etqe_id' string="Previous Provider Etqe " />-->

<!--								</group>-->
<!--							</group>-->
<!--						</page>-->

						<page string="Disability" name="page_disabilities">
							<h6>I have a disability  <field name="is_disabled"/></h6>
							<group name="group_1" string="Ratings">
<!--								<label for="is_disabled" string="Disabled"/>-->
<!--								<field name="is_disabled"/>-->
								<group name="group_left">
									<field name="seeing_rating_id_m2o" options="{'no_create': True, 'no_create_edit':True,'no_open':True} " string="Seeing " />
									<field name="hearing_rating_id_m2o" options="{'no_create': True, 'no_create_edit':True,'no_open':True} " string="Hearing  " />
									<field name="walking_rating_id_m2o" options="{'no_create': True, 'no_create_edit':True,'no_open':True} " string="Walking   " />
								</group>
								<group name="group_right">
									<field name="remembering_rating_id_m2o" options="{'no_create': True, 'no_create_edit':True,'no_open':True} " string="Remembering " />
									<field name="communicating_rating_id_m2o" options="{'no_create': True, 'no_create_edit':True,'no_open':True} " string="Communicating  " />
									<field name="self_care_rating_id_m2o" options="{'no_create': True, 'no_create_edit':True,'no_open':True} " string="Self Care   " />
								</group>
							</group>
						</page>


						<page string="Other Info " name="page_other_info">
							<group name="group_1">
								<group name="group_left">
									<field name="popi_act_status_id_m2o" options="{'no_create': True, 'no_create_edit':True,'no_open':True} " string="POPI Status" />
									<!-- <field name="popi_act_status_id_id" string="popi_act_status_id " /> -->
									<field name="popi_act_status_date" string="POPI Act Status Date" />
								</group>
								<group name="group_right">
									<field name="django_id" groups="base.group_no_one" string="SETMIS ID" invisible="1" />
									<!--                    <field name="provider_code_m2o" string="provider"/>-->
									<!--                    <field name="employer_m2o" string="Organisation"/>-->
								</group>
							</group>
						</page>
					</notebook>
					<group name="group_1">
						<group name="group_left"></group>
						<group name="group_right">
							<field name="write_date" string="Date Stamp" />
						</group>
					</group>

				</sheet>
				 <div class="oe_chatter no-attachments">
					<!-- <field name="message_follower_ids" widget="mail_followers" />
					<field name="activity_ids" widget="mail_activity" />
					<field name="message_ids" widget="mail_thread" /> -->
					<chatter />
				</div>
			</form>    <!-- >>>>>>>>>>>>>>>>>>>>>>>> PERSON-FORM >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> -->
		</field>
	</record>
	<record id="seta_person_action" model="ir.actions.act_window">
		<field name="name">Personal Profile</field>
		<field name="res_model">seta.person</field>
		<field name="type">ir.actions.act_window</field>
		<field name="context">{}</field>
		<field name="view_mode">list,form</field>
	</record>
	<menuitem
			id="stakeholder_sub_menu_person_master"
			sequence="1"
			name="Person Profile"
			parent="seta_base.stakeholder_root_master_person"
			action="seta_person_action"
			groups="seta_person.group_person_admin,seta_person.group_person_master_ext"/>
</odoo>